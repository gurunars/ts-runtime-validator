{
  "scripts": {
    "_lint": "eslint --config .eslintrc.json --ignore-path .gitignore './**/*.ts'",
    "lint": "yarn tsc --noEmit && yarn _lint",
    "fmt": "yarn lint --fix",
    "test:unit": "jest --config ./jest.conf.js --passWithNoTests",
    "test": "yarn lint && yarn test:unit",
    "launch": "ts-node -r tsconfig-paths/register"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint": "^7.14.0",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.2"
  },
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "eslint-plugin-unused-imports": "^1.0.0"
  }
}
