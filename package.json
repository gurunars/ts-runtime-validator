{
  "scripts": {
    "_lint": "eslint --config .eslintrc.json --ignore-path .gitignore './**/*.ts'",
    "lint": "yarn tsc --noEmit && yarn _lint",
    "fmt": "yarn lint --fix",
    "test:unit": "jest --config ./jest.conf.js --passWithNoTests --detectOpenHandles",
    "test": "yarn lint && yarn test:unit",
    "launch": "yarn ts-node-dev -r tsconfig-paths/register",
    "start-demo": "yarn launch example/run.ts"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.20",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "eslint": "^7.17.0",
    "eslint-plugin-jest-formatting": "^2.0.0",
    "eslint-plugin-unused-imports": "^1.0.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0"
  },
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ]
}
