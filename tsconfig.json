{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "outDir": "./dist",
    "noEmit": true,
    "paths": {
      "@validator/validator/*": ["validator/src/*"],
      "@validator/validator": ["validator/src/index.ts"],
      "@validator/rest-api-server/*": ["rest-api-server/src/*"],
      "@validator/rest-api-server": ["rest-api-server/src/index.ts"],
      "@validator/open-api-endpoint/*": ["open-api-endpoint/src/*"],
      "@validator/open-api-endpoint": ["open-api-endpoint/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/validator/tsconfig.build.json" },
    { "path": "./packages/rest-api-server/tsconfig.build.json" },
    { "path": "./packages/open-api-endpoint/tsconfig.build.json" }
  ]
}
