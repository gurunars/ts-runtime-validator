{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": true,
    "paths": {
      "@validator/validator/*": ["./packages/validator/src/*"],
      "@validator/validator": ["./packages/validator/src/index.ts"],
      "@validator/rest-api-server/*": ["./packages/rest-api-server/src/*"],
      "@validator/rest-api-server": ["./packages/rest-api-server/src/index.ts"],
      "@validator/open-api-endpoint/*": ["./packages/open-api-endpoint/src/*"],
      "@validator/open-api-endpoint": ["./packages/open-api-endpoint/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/validator" },
    { "path": "./packages/rest-api-server" },
    { "path": "./packages/open-api-endpoint" }
  ]
}
