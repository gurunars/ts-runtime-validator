{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext"],
    "declaration": true,
    "types": ["jest", "node"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./packages",
    "outDir": "./dist",
    "paths": {
      "@validator/validator/*": ["validator/src/*"],
      "@validator/validator": ["validator/src/index.ts"],
      "@validator/rest-api-server/*": ["rest-api-server/src/*"],
      "@validator/rest-api-server": ["rest-api-server/src/index.ts"],
      "@validator/open-api-endpoint/*": ["open-api-endpoint/src/*"],
      "@validator/open-api-endpoint": ["open-api-endpoint/src/index.ts"]
    }
  },
  "references": [
    { "path": "./packages/validator" },
    { "path": "./packages/rest-api-server" },
    { "path": "./packages/open-api-endpoint" }
  ]
}
